<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Páginas de error personalizadas -->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <remove statusCode="404" />
      <error statusCode="404" path="/404.html" responseMode="File" />
    </httpErrors>
    
    <!-- Reescritura de URLs -->
    <rewrite>
      <rules>
        <!-- Página de inicio sin extensión -->
        <rule name="Home Page" stopProcessing="true">
          <match url="^$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.html" />
        </rule>
        
        <!-- NUEVO: Routing para equipo (subcarpeta) -->
        <rule name="Equipo Subpages" stopProcessing="true">
          <match url="^equipo/([^.]+)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="equipo\{R:1}.html" matchType="IsFile" />
          </conditions>
          <action type="Rewrite" url="equipo/{R:1}.html" />
        </rule>
        
        <!-- Acceso a archivos HTML sin extensión (páginas raíz) -->
        <rule name="Remove HTML Extension" stopProcessing="true">
          <match url="^([^./]+)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_FILENAME}.html" matchType="IsFile" />
          </conditions>
          <action type="Rewrite" url="{R:1}.html" />
        </rule>
        
        <!-- Redirigir de .html a sin extensión -->
        <rule name="Redirect HTML Extension" stopProcessing="true">
          <match url="^(.*)\.html$" />
          <conditions>
            <add input="{REQUEST_METHOD}" pattern="GET" />
            <add input="{THE_REQUEST}" pattern="\.html[\s?]" />
          </conditions>
          <action type="Redirect" url="{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Headers de seguridad -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>